# ============================================
# SRX Fabric Library - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===== API Keys =====
# Optional: Google Gemini API key (currently not used in codebase, kept for future use)
GEMINI_API_KEY=

# ===== Project Root =====
# Optional: Absolute path to project root (defaults to config.py location)
# PROJECT_ROOT=/path/to/project

# ===== Directory Paths =====
# All paths can be relative to PROJECT_ROOT or absolute
# Defaults shown below

# Fabric and image directories
FABRIC_DIR=fabric_swatches
MOCKUP_DIR=mockups
MASK_DIR=masks
SILHOUETTE_DIR=silhouettes
IMAGE_DIR=images
TECHPACK_TEMPLATE_DIR=techpack_templates

# Output directories
MOCKUP_OUTPUT_DIR=generated_mockups
PDF_OUTPUT_DIR=generated_techpacks

# Data directories
EXCEL_DIR=Excel_files

# ===== Database Files =====
FABRIC_DATABASE_FILE=fabric_database.xlsx

# ===== Static Files =====
TITLE_SLIDE_1_PATH=1st page.png
TITLE_SLIDE_2_PATH=2nd page.png

# ===== Image Settings =====
DEFAULT_FABRIC_RESOLUTION_WIDTH=2000
DEFAULT_FABRIC_RESOLUTION_HEIGHT=2000
OUTPUT_FORMAT=PNG
OUTPUT_QUALITY=95

# ===== Techpack Coordinates (for PDF generation) =====
# These define where the mockup image is placed on the techpack template
TECHPACK_TOTAL_TEMPLATE_WIDTH_PX=2480
TECHPACK_TOTAL_TEMPLATE_HEIGHT_PX=3508
TECHPACK_SELECTION_X_PX=0
TECHPACK_SELECTION_Y_PX=0
TECHPACK_SELECTION_WIDTH_PX=2480
TECHPACK_SELECTION_HEIGHT_PX=3508

# ===== Flask Server Settings =====
# ===== Flask Server Settings =====
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
SITE_ADDRESS=:80
# For production, use: SITE_ADDRESS=linkersource.app

# ===== Security =====
SECRET_KEY=your-super-secure-generated-secret-key-change-this-in-production
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password_in_env_file
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001,http://13.203.231.247

# ===== Database =====
# PostgreSQL Connection String (Recommended for Production)
DATABASE_URL=postgresql://user:password@localhost:5432/fabric_db

# ===== Frontend Configuration =====
# URL of the backend API
VITE_API_URL=http://localhost:5000/api
